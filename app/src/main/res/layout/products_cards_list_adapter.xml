<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFE0"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="300dp"
            android:id="@+id/cardbackgroundImage"/>

        <TextView
            android:id="@+id/cardTopDescription"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cardTitle"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/cardPromoMessage"
            android:textSize="@dimen/text_promo_size"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/cardBottomDescription"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:alpha="0.3"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/shopMen"
            android:textSize="@dimen/text_button_size"
            android:background="@drawable/button_bg"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/shop_men"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/shopWomen"
            android:textSize="@dimen/text_button_size"
            android:background="@drawable/button_bg"
            android:text="@string/shop_women"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>
